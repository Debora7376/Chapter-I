{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                       
    "jsx": "react-jsx",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "noEmit": true,                               
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                             
    "strict": true,                                      
    "skipLibCheck": true,
    "isolatedModules": true, 
    "forceConsistentCasingInFileNames": true,                               
  },

  "include": ["src"]
}
